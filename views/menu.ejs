<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles/menu.css">
</head>
<body class="teal lighten-2">
<div class="white-text">
<div class="container">
    <div class="section" id="DailyMenu">
        <h2>Today's Menu:</h2>
    <table>
        <div class = "center">
            <thead>
                <tr>
                    <th>Menu</th>
                    <th>Price (per item)</th>
                    <th>Calories</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < inventory.length; i++) { %>
                <tr>
                    <td><%= inventory[i].menu_item %></td>
                    <td>$<%= inventory[i].price %></td>
                    <td><%= inventory[i].calories %></td>
                    <td><%= inventory[i].description %></td>
                </tr>
    
                <% } %>
    
            </tbody>
        </div>
    </table>
    </div>
    <div class="section" id="MenuList">
        <h2>Your Order!</h2>
    <table>
        <div class = "center">
        <thead>
            <tr>
                <th>Menu</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < inventory.length; i++) { %>
            <tr>
                <td><%= inventory[i].menu_item %></td>
                <td><%= inventory[i].quantity %></td>
                <td>$<%= inventory[i].price*inventory[i].quantity %></td>
                <td>
                    <a class="btn-small waves-effect waves-light orange" href="/menu/item/<%=inventory[i].order_id %>"><i
                            class="material-icons right">edit</i>Edit</a>
                    <a class="btn-small waves-effect waves-light red" href="/menu/item/<%=inventory[i].order_id %>/delete"><i
                            class="material-icons right">delete</i>Delete</a>
                </td>
            </tr>

            <% } %>

        </tbody>
        </div>
    </table>
    </div>
    <div class="section" id="AddMenu">
        <h2>Place New Order:</h2>
        <!-- form here -->
        <form class="col s12" method="post">
            <div class="row">
                <div class="input-field col s6">
                
                    <label for="menu_item"><div class="input-color">Item Name</div></label>
                    <input type="text" name="item" class="validate" data-length="32" color="white" required>

                </div>
                <div class="input-field col s6">
                
                    <label for="quantity"><div class="input-color">Quantity</div></label>
                    <input type="number" name="quantity" class="validate" value="1" required>
                    
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="requests"><div class="input-color">Special Requests</div></label>
                    <input type="text" name="requests" class="validate" data-length="100" color="white">
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <div class="request-color">
                    (Request to remove any ingredients or specify any dietary restrictions)
                    </div>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit">
                <i class="material-icons right">send</i>Submit</button>
        </form>
    </div>
</div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script> M.AutoInit();</script>
</div>
</body>
</html>